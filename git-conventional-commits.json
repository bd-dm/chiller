{
  "convention" : {
    "commitTypes": [
      "ci",
      "feat",
      "fix",
      "refactor",
      "style",
      "test",
      "build",
      "docs",
      "revert"
    ],
    "commitScopes": [],
    "releaseTagGlobPattern": "v[0-9]*.[0-9]*.[0-9]*"
  },

  "changelog" : {
    "commitTypes": [
      "feat",
      "fix",
      "perf",
      "merge"
    ],
    "includeInvalidCommits": true,
    "commitIgnoreRegexPattern": "^WIP ",
    "headlines": {
      "feat": "Features",
      "fix": "Bug Fixes",
      "perf": "Performance Improvements",
      "merge": "Merges",
      "breakingChange": "BREAKING CHANGES"
    },

    "commitUrl": "https://github.com/bd-dm/chiller/commit/%commit%",
    "commitRangeUrl": "https://github.com/bd-dm/chiller/compare/%from%...%to%?diff=split",
    "issueRegexPattern": "#\\d+",
    "issueUrl": "https://github.com/bd-dm/chiller/issues/%issue%"
  }
}
